<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del historial de ventas -->
    <TextView
        android:id="@+id/text_view_sales_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial de ventas"
        android:textSize="20sp"
        android:padding="16dp" />

    <!-- ListView para mostrar el historial de ventas -->
    <ListView
        android:id="@+id/sales_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <!-- Botón de regresar a la pantalla anterior -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar" />

</LinearLayout>
